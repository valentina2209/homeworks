// Task 7 – Dynamic search (simple implementation)
function Task07() {
const [query, setQuery] = useState("");
const employees = ["Олексій","Марія","Іван","Наталка","Олег","Світлана"];
const filtered = employees.filter(e => e.toLowerCase().includes(query.toLowerCase()));
return (
<div>
<h2>Task 7 — Dynamic search</h2>
<Back />
<input placeholder="Search..." value={query} onChange={(e) => setQuery(e.target.value)} />
<ul>
{filtered.map(name => <li key={name}>{name}</li>)}
</ul>
</div>
);
}